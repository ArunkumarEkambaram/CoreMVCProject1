@model Customer

@{   
    ViewBag.Title = "Details";
    var FullName = Model.FirstName + " " + Model.LastName;
}

<h1>Details of Customer</h1>

<div class="row">
    <div class="col-md-5">
        <table class="table table-bordered table-hover">
            <tr>
                <td class="font-weight-bold">Name</td>
                <td>@FullName</td>
            </tr>
            <tr>
                <td class="font-weight-bold">Birth Date</td>
                <td>@Model.BirthDate.ToShortDateString()</td>
            </tr>
            <tr>
                <td class="font-weight-bold">Mobile No</td>
                <td>@Model.MobileNo</td>
            </tr>           
        </table>
    </div>
</div>
<div class="row">
    <div class="col-md-5">
        <a asp-controller="Home" asp-action="Index" class="btn btn-lg btn-primary">Back to List</a>
    </div>
</div>